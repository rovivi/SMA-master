<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_lvl"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/hexa_performance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_level"
        style="@style/ShadowBlack"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="6sp"
        android:text="18"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_lvl"
        app:layout_constraintEnd_toEndOf="@+id/bg_lvl"
        app:layout_constraintStart_toStartOf="@+id/bg_lvl"
        app:layout_constraintTop_toTopOf="@+id/bg_lvl" />

</android.support.constraint.ConstraintLayout>