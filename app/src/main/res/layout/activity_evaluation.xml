<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/bgBlurEvaluation"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:scaleType="fitXY"
        plainpie:layout_constraintBottom_toTopOf="@+id/buttonContinue"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintHorizontal_bias="0.0"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toBottomOf="@+id/title_evaluation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        style="@style/ShadowBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginEnd="8.0dip"
        android:gravity="left"
        android:orientation="horizontal"
        plainpie:layout_constraintEnd_toEndOf="@+id/bgBlurEvaluation"
        plainpie:layout_constraintHorizontal_bias="0.06"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toBottomOf="@+id/title_evaluation">

        <ImageView
            android:id="@+id/bg_eval"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginEnd="4.0dip"
            android:scaleType="fitXY"
            plainpie:layout_constraintBottom_toBottomOf="parent"
            plainpie:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            plainpie:layout_constraintStart_toStartOf="parent"
            plainpie:layout_constraintTop_toTopOf="parent"
            plainpie:layout_constraintVertical_bias="0.0"
            plainpie:srcCompat="@drawable/name_bg" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            plainpie:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvPerfect1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Perfect"
                android:textColor="#ff00ffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tvGreat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Great"
                android:textColor="#ff00ff00"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tvGood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Good"
                android:textColor="#ffffff6c"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tvBad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Bad"
                android:textColor="#ffff55ff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tvMiss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Miss"
                android:textColor="#ffff98a2"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_Combo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Max Combo"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="8.0dip"
            android:gravity="left"
            android:orientation="vertical"
            android:textColor="#ffffffff"
            plainpie:layout_constraintEnd_toEndOf="parent"
            plainpie:layout_constraintHorizontal_bias="0.0"
            plainpie:layout_constraintStart_toEndOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/tv_perfect2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_great2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_good2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_bad2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_miss2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_maxCombo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <az.plainpie.PieView
        android:id="@+id/pieView"
        android:layout_width="120.0sp"
        android:layout_height="120.0sp"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginBottom="8.0dip"
        plainpie:inner_pie_padding="30"
        plainpie:inner_text_visibility="true"
        plainpie:layout_constraintBottom_toTopOf="@+id/buttonContinue"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintHorizontal_bias="0.11"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toBottomOf="@+id/layout_1"
        plainpie:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/buttonContinue"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginBottom="24.0dip"
        android:text="Tap Here To continue"
        android:textAlignment="center"
        android:textColor="@color/black_overlay"
        android:textSize="30.0sp"
        android:textStyle="bold"
        plainpie:layout_constraintBottom_toBottomOf="parent"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_evaluation"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginEnd="4.0dip"
        android:background="@drawable/name_bg"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black_overlay"
        android:textSize="30.0sp"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintHorizontal_bias="0.473"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dance_grade_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="175.0dip"
        android:layout_marginBottom="8.0dip"
        android:fontFamily="monospace"
        android:text="Tap Grade"
        android:textColor="@color/cardview_light_background"
        plainpie:layout_constraintBottom_toTopOf="@+id/title_evaluation"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toTopOf="parent"
        plainpie:layout_constraintVertical_bias="0.26" />

    <ImageView
        android:id="@+id/letterGrade"
        android:layout_width="150.0sp"
        android:layout_height="150.0sp"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="14.0dip"
        android:layout_marginBottom="8.0dip"
        plainpie:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintHorizontal_bias="0.526"
        plainpie:layout_constraintStart_toEndOf="@+id/linearLayout"
        plainpie:layout_constraintTop_toTopOf="@+id/linearLayout"
        plainpie:layout_constraintVertical_bias="0.0"
        plainpie:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/image_level"
        android:layout_width="120.0sp"
        android:layout_height="120.0sp"
        android:layout_marginStart="8.0dip"
        android:layout_marginEnd="8.0dip"
        plainpie:layout_constraintBottom_toBottomOf="@+id/pieView"
        plainpie:layout_constraintEnd_toEndOf="@+id/bgBlurEvaluation"
        plainpie:layout_constraintHorizontal_bias="0.4"
        plainpie:layout_constraintStart_toEndOf="@+id/pieView"
        plainpie:layout_constraintTop_toTopOf="@+id/pieView"
        plainpie:layout_constraintVertical_bias="0.49"
        plainpie:srcCompat="@drawable/hexa_double" />

    <TextView
        android:id="@+id/text_lvl_ecal"
        style="@style/ShadowBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textColor="@color/cardview_dark_background"
        android:textSize="45.0sp"
        plainpie:layout_constraintBottom_toBottomOf="@+id/image_level"
        plainpie:layout_constraintEnd_toEndOf="@+id/image_level"
        plainpie:layout_constraintStart_toStartOf="@+id/image_level"
        plainpie:layout_constraintTop_toTopOf="@+id/image_level" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        plainpie:layout_constraintBottom_toBottomOf="parent"
        plainpie:layout_constraintEnd_toEndOf="parent"
        plainpie:layout_constraintStart_toStartOf="parent"
        plainpie:layout_constraintTop_toBottomOf="@+id/letterGrade"
        plainpie:layout_constraintTop_toTopOf="parent"
        plainpie:layout_constraintVertical_bias="0.52">

        <ImageView
            android:id="@+id/fotternll"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            plainpie:srcCompat="@drawable/footer" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50.0sp"
            android:layout_height="50.0sp"
            android:layout_marginStart="32.0dip"
            android:layout_marginEnd="4.0dip"
            plainpie:layout_constraintBottom_toBottomOf="parent"
            plainpie:layout_constraintEnd_toEndOf="parent"
            plainpie:layout_constraintHorizontal_bias="0.35"
            plainpie:layout_constraintStart_toStartOf="parent"
            plainpie:layout_constraintTop_toTopOf="parent"
            plainpie:srcCompat="@drawable/lvl" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50.0sp"
            android:layout_height="50.0sp"
            android:layout_marginStart="8.0dip"
            plainpie:layout_constraintStart_toEndOf="@+id/imageView8"
            plainpie:srcCompat="@drawable/lvl" />

        <TextView
            android:id="@+id/lvl_judment_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip"
            android:text="99"
            android:textColor="@color/black_overlay"
            android:textSize="18.0sp"
            android:textStyle="bold"
            plainpie:layout_constraintBottom_toBottomOf="@+id/imageView8"
            plainpie:layout_constraintEnd_toEndOf="@+id/imageView8"
            plainpie:layout_constraintStart_toStartOf="@+id/imageView8"
            plainpie:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/skin_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            plainpie:layout_constraintBottom_toBottomOf="@+id/imageView9"
            plainpie:layout_constraintEnd_toEndOf="@+id/imageView9"
            plainpie:layout_constraintStart_toStartOf="@+id/imageView9"
            plainpie:layout_constraintTop_toTopOf="@+id/imageView9"
            plainpie:srcCompat="@drawable/ic_info_black_24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="9.0dip"
        android:layout_marginBottom="8.0dip"
        android:text="T.P."
        android:textColor="@android:color/background_light"
        plainpie:layout_constraintBottom_toTopOf="@+id/pieView"
        plainpie:layout_constraintEnd_toEndOf="@+id/pieView"
        plainpie:layout_constraintStart_toStartOf="@+id/pieView"
        plainpie:layout_constraintTop_toBottomOf="@+id/layout_1" />
</androidx.constraintlayout.widget.ConstraintLayout>